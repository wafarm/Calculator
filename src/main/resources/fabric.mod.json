  "name": "Yet Another Calculator",
  "description": "A Minecraft mod that adds in-game calculating functions.",
  "authors": [
    "Wafarm"
  ],
  "contact": {
    "repo": "https://github.com/wafarm/Calculator"
  },
  "license": "Apache-2.0",
  "icon": "assets/calculator/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.wafarm.calculator.CalculatorClient"
    ]
